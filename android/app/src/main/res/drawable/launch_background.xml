<?xml version="1.0" encoding="utf-8"?>
<!-- Modify this file to customize your launch splash screen -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:drawable="@android:color/white" />

    <!-- You can insert your own image assets here -->
    <item>
        <bitmap android:gravity="fill" android:src="@mipmap/bg"/>
    </item>
    <item android:top="144dp">
        <bitmap android:gravity="top|center_vertical|center_horizontal|center" android:src="@mipmap/logo"/>
    </item>
    <item>
        <bitmap android:gravity="bottom|left|right|center_vertical|center_horizontal|fill_horizontal|center" android:src="@mipmap/bottom"/>
    </item>
</layer-list>
